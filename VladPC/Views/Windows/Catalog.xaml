<UserControl x:Class="VladPC.Views.Windows.Catalog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:VladPC.ViewModels"
             xmlns:local="clr-namespace:VladPC.Views.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="720">

    <!--<UserControl.DataContext>
        <vm:CatalogViewModel/>
    </UserControl.DataContext>-->

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">

                <Button Command="{Binding AddInCart}">Добавть в корзину</Button>

            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">

            <ListView x:Name="ProductList"
                      ItemsSource="{Binding Products}"
                      Background="Transparent"
                      HorizontalContentAlignment="Stretch"
                      BorderThickness="0"
                      SelectedItem="{Binding ProductSelected}">

                <ListView.ItemTemplate >
                    <DataTemplate>
                        <Grid Margin="1">

                            <Border CornerRadius="5"
                                    Background="#38354f"
                                    Padding="25"/>

                            <Grid VerticalAlignment="Center"
                                  Margin="20,10,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <StackPanel Orientation="Horizontal">

                                        <TextBlock Text="{Binding TypeProduct}"
                                                   Foreground="#DBDBDB"
                                                   FontSize="14"
                                                   Margin="0,0,5,0"/>

                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="#DBDBDB"
                                                   FontSize="14"/>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <TextBlock Text="{Binding CatalogString}"
                                               Foreground="#DBDBDB"></TextBlock>

                                </Grid>

                            </Grid>

                            <StackPanel Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">

                                <TextBlock Text="В наличии: "
                                           Foreground="#DBDBDB"
                                           FontSize="14"/>

                                <TextBlock Text="{Binding Count}"
                                           Foreground="#DBDBDB"
                                           FontSize="14"
                                           Margin="0,0,20,0"/>

                                <TextBlock Text="{Binding Price}"
                                           Foreground="#DBDBDB"
                                           FontSize="14"/>
                                
                                <TextBlock Text=" Руб."
                                           Foreground="#DBDBDB"
                                           FontSize="14"/>

                            </StackPanel>



                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        

        <!--<Label Content="Здесь будет каталог" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="40"/>-->

    </Grid>
</UserControl>
