<Window x:Class="VladPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:vm="clr-namespace:VladPC.ViewModels"
        xmlns:cmd="clr-namespace:VladPC.Infrastructure.Commands"
        xmlns:l="clr-namespace:VladPC"
        Title="VladPC"
        mc:Ignorable="d" Height="600" Width="920"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">
    <!--Title="{Binding Title}" Height="450" Width="800"-->
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Border Background="#272537"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            


            <Grid Grid.Row="0">
                <Border Background="#38354f"
            HorizontalAlignment="Stretch"/>
            </Grid>

            <Grid Grid.Row="1">
                <Border Background="#38354f"
                        HorizontalAlignment="Stretch"/>

            </Grid>

            <TextBlock Text="VladPC"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Snow"
                       FontSize="22"/>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Каталог"
                             Style="{StaticResource BtnStyle}"/>
                <RadioButton Content="Корзина"
                             Style="{StaticResource BtnStyle}"/>
                <RadioButton Content="Профиль"
                             Style="{StaticResource BtnStyle}"/>
            </StackPanel>
        </Grid>

    </Border>
</Window>
